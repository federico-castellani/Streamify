<MudDialog>
    <DialogContent>
        <MudText Typo="Typo.body1" Class="mb-4" Style="word-break: break-word; white-space: pre-line;">
            @Message
        </MudText>
    </DialogContent>
    <DialogActions>
        <MudButton Color="Color.Secondary" OnClick="OnCancel">Annulla</MudButton>
        <MudButton Color="Color.Error" Variant="Variant.Filled" OnClick="OnConfirm">Conferma</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [Parameter] public string Message { get; set; } = "Confermi la rimozione del film?";
    [CascadingParameter] IMudDialogInstance MudDialog { get; set; }
    private void OnCancel() => MudDialog.Cancel();
    private void OnConfirm() => MudDialog.Close(DialogResult.Ok(true));
}